        #50;
        CHECK_cout(1'b0);
        // -------------------------------------
        // -------------  Current Time:  2300ns
        #50;
        b = 1'b0;
    end

    task CHECK_cout;
        input NEXT_cout;

        #0 begin
            if (NEXT_cout !== cout) begin
                $display("Error at time=%dns cout=%b, expected=%b", $time, cout, NEXT_cout);
                TX_ERROR = TX_ERROR + 1;
            end
        end
    endtask
    task CHECK_res;
        input NEXT_res;

        #0 begin
            if (NEXT_res !== res) begin
                $display("Error at time=%dns res=%b, expected=%b", $time, res, NEXT_res);
                TX_ERROR = TX_ERROR + 1;
            end
        end
    endtask

endmodule

